<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/img1"/>
    <Button
        android:id="@+id/btn_chonhinh"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:text="Chọn hình"
        android:background="@drawable/btn_gradient_style"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Tên : "
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="center"/>
        <EditText
            android:id="@+id/edt_tensp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Loại : "
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="center"/>
        <Spinner
            android:id="@+id/sp_loaisp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Số lượng : "
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="center"/>
        <EditText
            android:id="@+id/edt_soluong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Giá tiền : "
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="center"/>
        <EditText
            android:id="@+id/edt_giatien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="20dp"/>
    </LinearLayout>


        
        <Button
            android:id="@+id/btn_okie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lưu"
            android:textColor="#fff"
            android:padding="10dp"
            android:layout_marginLeft="300dp"
            android:background="@drawable/btn_gradient_style"/>

    <Button
        android:id="@+id/btn_xemsp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xem sản phẩm"
        android:textColor="#fff"
        android:layout_marginTop="70dp"
        android:background="@drawable/btn_gradient_style"/>






</LinearLayout>